<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="root" id="resultgrid" alignment="CENTER"
          maxHeight="-Infinity" maxWidth="-Infinity"
          minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="500" prefWidth="700"
          xmlns="http://javafx.com/javafx/8"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.ucsd.globalties.dvs.core.ui.ResultGridController">

    <columnConstraints>
        <ColumnConstraints percentWidth="100"></ColumnConstraints>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="100"></RowConstraints>
    </rowConstraints>

    <VBox spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="TOP_CENTER">

        <Label fx:id="nameLabel" text="John Doe" styleClass="h3, text-primary" />

        <Label fx:id="globalStatusLabel" text="N/A" styleClass="h4, alert-danger, container" />

        <Separator></Separator>

        <!--Myopia-->
        <GridPane>
            <columnConstraints>
                <ColumnConstraints percentWidth="50"></ColumnConstraints>
                <ColumnConstraints percentWidth="50"></ColumnConstraints>
            </columnConstraints>
            <HBox GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER">
                <Label text="Myopia" />
            </HBox>
            <HBox GridPane.columnIndex="1" GridPane.rowIndex="0" alignment="CENTER">
                <Label fx:id="myopiaLabel" text="N/A" />
            </HBox>
        </GridPane>

        <Separator></Separator>

        <!--Hyperopia-->
        <GridPane>
            <columnConstraints>
                <ColumnConstraints percentWidth="50"></ColumnConstraints>
                <ColumnConstraints percentWidth="50"></ColumnConstraints>
            </columnConstraints>
            <HBox GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER">
                <Label text="Hyperopia" />
            </HBox>
            <HBox GridPane.columnIndex="1" GridPane.rowIndex="0" alignment="CENTER">
                <Label fx:id="hyperopiaLabel" text="N/A" />
            </HBox>
        </GridPane>

        <Separator></Separator>

        <!--Astigmatism-->
        <GridPane>
            <columnConstraints>
                <ColumnConstraints percentWidth="50"></ColumnConstraints>
                <ColumnConstraints percentWidth="50"></ColumnConstraints>
            </columnConstraints>
            <HBox GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER">
                <Label text="Astigmatism" />
            </HBox>
            <HBox GridPane.columnIndex="1" GridPane.rowIndex="0" alignment="CENTER">
                <Label fx:id="astigmatismLabel" text="N/A" />
            </HBox>
        </GridPane>

        <Separator></Separator>

        <!--Strabismus-->
        <GridPane>
            <columnConstraints>
                <ColumnConstraints percentWidth="50"></ColumnConstraints>
                <ColumnConstraints percentWidth="50"></ColumnConstraints>
            </columnConstraints>
            <HBox GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER">
                <Label text="Strabismus" />
            </HBox>
            <HBox GridPane.columnIndex="1" GridPane.rowIndex="0" alignment="CENTER">
                <Label fx:id="strabismusLabel" text="N/A" />
            </HBox>
        </GridPane>

        <Separator></Separator>

        <!--Cataracts-->
        <GridPane>
            <columnConstraints>
                <ColumnConstraints percentWidth="50"></ColumnConstraints>
                <ColumnConstraints percentWidth="50"></ColumnConstraints>
            </columnConstraints>
            <HBox GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER">
                <Label text="Cataracts" />
            </HBox>
            <HBox GridPane.columnIndex="1" GridPane.rowIndex="0" alignment="CENTER">
                <Label fx:id="cataractsLabel" text="N/A" />
            </HBox>
        </GridPane>

        <Separator></Separator>

        <!--Anisometropia-->
        <GridPane>
            <columnConstraints>
                <ColumnConstraints percentWidth="50"></ColumnConstraints>
                <ColumnConstraints percentWidth="50"></ColumnConstraints>
            </columnConstraints>
            <HBox GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER">
                <Label text="Anisometropia" />
            </HBox>
            <HBox GridPane.columnIndex="1" GridPane.rowIndex="0" alignment="CENTER">
                <Label fx:id="anisometropiaLabel" text="N/A" />
            </HBox>
        </GridPane>

    </VBox>
</GridPane>



